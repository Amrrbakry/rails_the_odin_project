<header class="navbar navbar-fixed-top">
    <div class="navbar-brand">
    <%= link_to "Odin Facebook", root_path, id: "logo" %>
    </div>
    <nav id="right-nav">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li>
            <%= link_to current_user.username.titleize, current_user %>
          </li>
          <li class="notifications"> 
            <%= render 'shared/notifications' %>
          </li>
          <li><%= link_to "Home", root_path %></li>
          <li> <%= link_to "Friends", friends_user_path(current_user) %> </li>
          <li><%= link_to "Users", users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Settings", edit_user_registration_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", sign_out_path %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", sign_in_path %></li>
        <% end %>
      </ul>
    </nav>
</header>