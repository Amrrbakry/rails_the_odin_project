<% kitten_name = kitten.name %>
<h3><%= link_to kitten_name, kitten_path(kitten) %> </h3>
<h3>Age: <%= kitten.age %> </h3>
<h3>Cuteness: <%= kitten.cuteness %> </h3>
<h3>Softness: <%= kitten.softness %> </h3>
<%= link_to "change kitten", edit_kitten_path(kitten) %>
<%= link_to "give away kitten :(", kitten, method: :delete,
                                  data: { confirm: "You sure?" } %>
<hr>
