<li id="<%= event.id %>">
  <span class="title">
    <%= link_to event.title, event %>
  </span> <br>
  <span class="description">
  <%= event.description %>
  </span> <br>
  <span class="location">
  <%= event.location %>
  </span> |
  <span class="date">
  <%= event.date.strftime("%A, %d %b %Y %l:%M %p") %>
  </span> <br>
  <span class="event_creator">
  Created by:
  <%= link_to event.event_creator.name, event.event_creator %> 
  </span> <br>
  <span class="timestamp">
    Posted <%= time_ago_in_words(event.created_at) %> ago.
  </span>
</li>
<hr class="event-divider">

