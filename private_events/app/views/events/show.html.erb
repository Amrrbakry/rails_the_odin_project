<h1> <%= @event.title %> </h1>
<% if !current_user.events.include?(@event) && !@event.attendees.include?(current_user) %>
	<%= link_to "I'm Going to this event.", controller: "events", action: "going", id: @event %>
<% end %>
<h3>Attendees:</h3>
<ol>
<% @event.attendees.each do |attendee| %>
   <li><%= link_to attendee.name, attendee %></li>
<% end %>
</ol>
<h4> Created by: <%= @event.event_creator.name %> </h4>
